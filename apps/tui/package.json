{
	"name": "ccproxy",
	"version": "1.0.0",
	"description": "TUI for ccproxy load balancer",
	"bin": {
		"ccproxy": "./dist/ccproxy"
	},
	"type": "module",
	"scripts": {
		"dev": "bun run src/main.ts",
		"build": "bun build src/main.ts --compile --outfile dist/ccproxy --target=bun",
		"prepublishOnly": "bun run build",
		"postpublish": "chmod +x dist/ccproxy"
	},
	"dependencies": {
		"@ccproxy/tui-core": "workspace:*",
		"@ccproxy/ui-common": "workspace:*",
		"@ccproxy/database": "workspace:*",
		"@ccproxy/core-di": "workspace:*",
		"@ccproxy/config": "workspace:*",
		"@ccproxy/logger": "workspace:*",
		"@ccproxy/server": "workspace:*",
		"ink": "^6.0.0",
		"ink-select-input": "^6.0.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"react": "^19.0.0"
	},
	"devDependencies": {
		"@types/react": "^19.0.0",
		"@types/node": "^20.0.0",
		"react-devtools-core": "^5.0.0"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"ccproxy",
		"load-balancer",
		"tui",
		"cli"
	],
	"publishConfig": {
		"access": "public"
	}
}
